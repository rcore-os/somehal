{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "qemu debug aarch64",
            "command": "cargo",
            "args": [
                "test",
                "--target",
                "aarch64-unknown-none",
                "-p",
                "platform-test",
                "--test",
                "test",
                "--",
                "--no-run",
                "--show-output",
            ],
            "options": {
                "cwd": "${workspaceFolder}",
            },
            "problemMatcher": {
                "base": "$rustc",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*",
                    "endsPattern": "^.*Running tests"
                }
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "detail": "断点调试 test 测试用例", 
            "isBackground": true,
        },
